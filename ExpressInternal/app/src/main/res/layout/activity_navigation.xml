<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/map"
    tools:context="com.yilinker.expressinternal.controllers.navigation.ActivityNavigation"
    android:name="com.google.android.gms.maps.SupportMapFragment" />

    <LinearLayout android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp" android:layout_margin="20dp" android:background="@color/white" android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:text="@string/navigation_distance" android:gravity="center" />

        <TextView android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:text="200m" android:gravity="center" android:textAllCaps="true" android:layout_marginLeft="10dp"/>

    </LinearLayout>

</RelativeLayout>