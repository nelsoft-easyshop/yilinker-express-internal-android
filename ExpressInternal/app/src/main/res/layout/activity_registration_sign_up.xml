<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/registration_cover_height"
            android:background="@drawable/ic_map_background"
            android:id="@+id/ivBackground" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_white"
            android:layout_above="@+id/ivLogo"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="@dimen/registration_message_marginBottom"
            android:gravity="center"
            android:padding="15dp"
            android:textSize="20sp"
            android:textColor="@color/gray_brown"
            android:text="Become a \n YILINKER EXPRESS \nPARTNER"/>

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="@dimen/registration_rider_logo"
            android:layout_height="@dimen/registration_rider_logo"
            android:background="@drawable/ic_rider_circle"
            android:layout_below="@+id/ivBackground"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/registration_rider_logo_margin_top"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/ivLogo"
            android:padding="10dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/registration_mobile_margin_top"
                android:background="@drawable/bg_rounded_white_no_padding"
                android:padding="5dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_roundedcorner_gray"
                    android:padding="5dp"
                    android:text="+63"
                    android:enabled="false"
                    android:drawableLeft="@drawable/ic_ph_flag"/>

                <EditText
                    android:id="@+id/etMobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_rounded_white_no_padding"
                    android:paddingStart="15dp"
                    android:singleLine="true"
                    android:inputType="number"
                    android:maxLength="10"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/login_sign_up"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:background="@drawable/bg_btn_orangeyellow_rounded"
                android:layout_below="@+id/etConfirmPassword"
                android:layout_marginTop="@dimen/registration_sign_up_margin_top"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_marginTop="@dimen/registration_sign_in_margin_top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/registration_already_have_an_account"
                    android:textColor="@color/gray_brown"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tvSignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/registration_here"
                    android:textSize="18sp"
                    android:textColor="@color/orange_yellow"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"/>

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/viewLoader"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:clickable="true"
            />

    </RelativeLayout>
</LinearLayout>