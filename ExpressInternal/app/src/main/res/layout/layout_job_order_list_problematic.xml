<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_white_no_padding"
    android:layout_margin="10dp">


    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="@dimen/joborder_status_width"
        android:layout_height="@dimen/joborder_status_height"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@color/orange_red"
        android:text="PROBLEMATIC"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/tvWaybillNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/tvStatus"
        android:textSize="14sp"
        android:layout_toStartOf="@+id/tvEarning"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/tvEarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_green"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="P 1000"
        android:textStyle="bold"
        android:textColor="@color/green"/>

    <View
        android:id="@+id/viewLine1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvWaybillNo"
        android:background="@color/gray"
        android:layout_marginTop="10dp"/>

    <!--Pick up or Delivery Address Container-->
    <RelativeLayout
        android:id="@+id/rlDestinationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewLine1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/tvAddressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/job_order_list_drop_off_to"
            android:textSize="12sp"
            android:textColor="@color/marigold"/>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_below="@+id/tvAddressLabel"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/ivFromIcon"/>

        <ImageView
            android:id="@+id/ivFromIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_branch"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <View
        android:id="@+id/viewLine2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rlDestinationContainer"
        android:background="@color/gray"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:id="@+id/rlReasonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewLine2"
        android:padding="10dp"
        android:background="@drawable/bg_rounded_bottom_white">


        <TextView
            android:id="@+id/tvProblemType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="12sp"
            android:textColor="@color/orange_red"
            android:layout_toStartOf="@+id/tvSize"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tvSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Pouch"
            android:textSize="12sp"
            android:textColor="@color/marigold"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</RelativeLayout>