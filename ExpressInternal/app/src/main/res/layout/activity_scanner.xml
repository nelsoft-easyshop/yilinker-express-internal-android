<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    

    <com.dlazaro66.qrcodereaderview.QRCodeReaderView
        android:layout_width="200dp"
        android:layout_height="200dp" android:id="@+id/qrreader" android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:text="@string/scan_qr" android:layout_above="@+id/qrreader" android:gravity="center_horizontal" android:layout_marginBottom="50dp"/>


</RelativeLayout>