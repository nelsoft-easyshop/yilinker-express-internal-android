<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvJobDescriptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="24dp"
            android:background="@color/orange_yellow"
            android:text="FOR DELIVERY"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEarnableAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tvJobDescriptionTitle"
            android:layout_marginRight="35dp"
            android:background="@drawable/bg_amount_to_earn"
            android:text="P 75"
            android:textColor="@color/apple_green"
            android:textSize="22sp" />

        <!--Start Waybill Container-->
        <LinearLayout
            android:id="@+id/llWaybillContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvJobDescriptionTitle"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <TextView
                style="@style/JobOrderDetailLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/job_order_waybill_number" />

            <TextView
                android:id="@+id/tvWaybillNo"
                style="@style/JobOrderDetailTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WBEPH00011000000000032" />

            <!--Start DATE-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        style="@style/JobOrderDetailLabelStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/joborderdetail_date_created" />

                    <TextView
                        android:id="@+id/tvDateCreated"
                        style="@style/JobOrderDetailTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23 MAR - 02:30 PM" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:orientation="vertical"
                    android:paddingEnd="35dp">

                    <TextView
                        style="@style/JobOrderDetailLabelStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/joborderdetail_date_accepted" />

                    <TextView
                        android:id="@+id/tvDateAccepted"
                        style="@style/JobOrderDetailTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24 MAR - 02:30 PM" />

                </LinearLayout>

            </RelativeLayout>
            <!--END DATE-->

            <TextView
                style="@style/JobOrderDetailLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_elapsed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/JobOrderDetailTextRedStyle"
                android:text="24:50m"/>


        </LinearLayout>

        <!--end Waybill Container-->

        <!--Start Delivery To-->
        <LinearLayout
            android:id="@+id/llFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/llWaybillContainer"
            android:background="@color/white_gray"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <TextView
                style="@style/JobOrderDetailLabelOrangeStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/deliver_to" />

            <TextView
                style="@style/JobOrderDetailLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delivery_address" />

            <TextView
                android:id="@+id/tvPickupAddress"
                style="@style/JobOrderDetailTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="35dp"
                android:text="Unit 8C 8th Flr, Marc 2000 Tower, Quirino Ave., cor. Taft Avenue, San Andres, Manila City, Metro Manila-Manila" />

            <TextView
                style="@style/JobOrderDetailLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shipper_name" />

            <TextView
                android:id="@+id/tvShipperName"
                style="@style/JobOrderDetailTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="35dp"
                android:text="Rocky Coronado" />

            <TextView
                style="@style/JobOrderDetailLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact_number" />

            <TextView
                android:id="@+id/tvContactNo"
                style="@style/JobOrderDetailTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="35dp"
                android:text="0917 812 7804" />

            <TextView
                style="@style/JobOrderDetailLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item" />

            <TextView
                android:id="@+id/tvItem"
                style="@style/JobOrderDetailTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="35dp"
                android:text="iPhone 6S" />

            <TextView
                style="@style/JobOrderDetailLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/joborderdetail_amount_to_collect" />

            <TextView
                android:id="@+id/tvAmountToCollect"
                style="@style/JobOrderDetailTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="35dp"
                android:text="P 15,000.00" />


        </LinearLayout>
        <!--end Delivery To-->


    </RelativeLayout>


</merge>
