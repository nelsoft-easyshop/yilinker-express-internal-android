<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_white_no_padding"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="@dimen/joborder_status_width"
        android:layout_height="@dimen/joborder_status_height"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@color/blue_green"
        android:text="Deliver"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/tvWaybillNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TESTWAYBILL00000000003222"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/tvStatus"
        android:textSize="14sp"
        android:layout_toStartOf="@+id/tvEarning"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/tvTimeElapsedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Elapsed"
        android:layout_below="@+id/tvWaybillNo"
        android:textSize="12sp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/tvEarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_green"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="P 1000"
        android:textStyle="bold"
        android:textColor="@color/green"/>

    <TextView
        android:id="@+id/tvTimeElapsed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:05 m"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/blue_green"
        android:layout_below="@+id/tvTimeElapsedLabel"
        android:layout_marginStart="10dp"/>

    <!--Pick up or Delivery Address Container-->
    <RelativeLayout
        android:id="@+id/rlDestinationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTimeElapsed"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/tvDestinationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/job_order_list_pick_up_at"
            android:textSize="12sp"
            android:textColor="@color/marigold"/>

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Address here, Sample Test Address - Test Address"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_below="@+id/tvDestinationLabel"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/ivFromIcon"/>

        <ImageView
            android:id="@+id/ivFromIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_shipper"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlDistanceContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlDestinationContainer"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvDistanceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/job_order_list_distance_label"
            android:textSize="12sp"
            android:textColor="@color/marigold"/>


        <TextView
            android:id="@+id/tvDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2500 m"
            android:textSize="12sp"
            android:layout_toEndOf="@+id/tvDistanceLabel"
            android:layout_toStartOf="@+id/tvSize"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/tvSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Pouch"
            android:textSize="12sp"
            android:textColor="@color/marigold"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>


</RelativeLayout>