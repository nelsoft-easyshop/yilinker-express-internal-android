<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout android:id="@+id/llButtons" android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:orientation="horizontal" android:layout_margin="20dp">

        <ImageButton android:id="@+id/btnCall"
            style="@style/ContactButtonStyle" android:layout_marginRight="15dp" />

        <ImageButton android:id="@+id/btnSMS"
            style="@style/ContactButtonStyle" android:layout_marginLeft="15dp"/>

    </LinearLayout>

    <TextView android:id="@+id/tvContactNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:gravity="center" android:layout_above="@+id/llButtons" android:text="+639981234567" android:textSize="22sp" android:textColor="@color/warm_gray"/>

    <TextView android:id="@+id/tvContacName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:gravity="center" android:layout_above="@+id/tvContactNo" android:text="Joan Bautista" android:textSize="30sp" android:textColor="@color/greyish_brown"/>


</RelativeLayout>