<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="#979797">


    <com.dlazaro66.qrcodereaderview.QRCodeReaderView
        android:layout_width="200dp"
        android:layout_height="200dp" android:id="@+id/qrreader" android:layout_centerInParent="true" android:padding="2dp" android:background="@drawable/bg_scanner_outline"/>

<LinearLayout android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="70dp" android:orientation="horizontal" android:padding="10dp" android:layout_alignParentBottom="true" >

    <EditText
        android:layout_width="0dp"
        android:layout_height="match_parent" android:layout_weight="7" android:background="@color/gray"
        android:id="@+id/etCode" />

    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent" android:layout_weight="1" android:background="@color/orange_red"
        android:text="Go"
        android:id="@+id/btnGo" android:textColor="@color/white" />

</LinearLayout>

</RelativeLayout>