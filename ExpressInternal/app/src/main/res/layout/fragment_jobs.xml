    <ImageView
        android:id="@+id/ivToggleView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_maps_selected"
        android:background="@drawable/bg_btn_circle_trans_orangered"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/ivScanner"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_scan_2"
        android:background="@drawable/bg_btn_circle_trans_orangered"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_above="@id/ivToggleView"
        android:padding="10dp"
        android:clickable="true"/>

    <View
        android:id="@+id/viewTransparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rlFilterContainer"
        android:clickable="true"
        android:visibility="gone"
        android:background="@color/trans_gray"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvJobOrderTabs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:id="@+id/llFilterContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/rvJobOrderTabs"
        android:background="@color/warm_gray"
        android:visibility="gone">

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Waybill Number"
            android:layout_margin="10dp"
            android:background="@drawable/bg_rounded_white"
            android:clickable="true"/>

        <LinearLayout
            android:id="@+id/llJobTypesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/select_job_types"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:padding="10dp"
                android:background="@color/gray_dark"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvJobOrderTypes"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>
            
            <TextView
                android:id="@+id/tvMoreJobTypes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_gray_brown"
                android:gravity="center"
                android:textColor="@color/white"
                android:padding="10dp"
                android:layout_margin="10dp"/>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlFilterContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/joborderlsit_filterbar_height"
        android:background="@color/warm_gray"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_below="@id/llFilterContainer"
        android:clickable="true">

        <TextView
            android:id="@+id/tvItemCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/tvLabelItemCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Found"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tvItemCount" />

        <TextView
            android:id="@+id/tvFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:drawableStart="@drawable/ic_filter_icon"
            android:clickable="true"/>

    </RelativeLayout>

</RelativeLayout>