<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvJobOrderTabs"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"/>


    <!--buffer space-->
    <!--<TextView-->
        <!--android:id="@+id/tvBufferSpace"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:padding="10dp"-->
        <!--android:layout_below="@+id/rvJobOrderTabs"-->
        <!--android:text="Buffer Text"-->
        <!--android:visibility="invisible"-->
        <!--android:layout_centerInParent="true"/>-->

    <FrameLayout
        android:id="@+id/flContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llFilterContainer"/>

    <ImageView
        android:id="@+id/ivToggleView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_maps_selected"
        android:background="@drawable/bg_btn_circle_orangered"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/ivScanner"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_scan"
        android:background="@drawable/bg_btn_circle_orangered"
        android:layout_above="@id/ivToggleView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:padding="5dp"/>


    <LinearLayout
        android:id="@+id/llFilterContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/rvJobOrderTabs"
        android:background="@color/warm_gray">

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Waybill Number"
            android:layout_margin="10dp"
            android:background="@drawable/bg_rounded_white"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/llJobTypesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/select_job_types"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:padding="10dp"
                android:background="@color/light_gray"/>

            <RadioGroup
                android:id="@+id/rgJobTypes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginBottom="30dp">

                <RadioButton android:id="@+id/rbForPickUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/search_type_for_pick_up"
                    android:button="@null"
                    android:drawableRight="@drawable/radio_button_selector"
                    android:textColor="@color/white"
                    android:checked="true"
                    android:layout_marginBottom="5dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"/>

                <RadioButton android:id="@+id/rbForDropOff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/search_for_drop_off"
                    android:button="@null"
                    android:drawableRight="@drawable/radio_button_selector"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"/>

                <RadioButton android:id="@+id/rbForDelivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/search_for_delivery"
                    android:button="@null"
                    android:drawableRight="@drawable/radio_button_selector"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"/>

            </RadioGroup>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlFilterContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/warm_gray"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <TextView
                android:id="@+id/tvItemCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23 Found"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tvFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filter"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:drawableStart="@drawable/ic_filter_icon"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>