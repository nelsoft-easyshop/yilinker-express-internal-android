<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="20dp">

        <TextView android:id="@+id/tvJobOrderNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textSize="22sp" android:textColor="@color/greyish_brown" android:text="JO121313333"  android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textAllCaps="true" android:textSize="14sp" android:text="@string/item"  android:textColor="@color/greyish_brown" />

        <TextView android:id="@+id/tvItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textSize="14sp" android:text="JO121313333"  android:textColor="@color/warm_gray"/>

        <android.support.v7.widget.RecyclerView android:id="@+id/rvChecklist"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginTop="30dp"></android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <Button android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_button_height"  android:background="@color/white_gray" android:layout_alignParentBottom="true" android:textColor="@color/warm_gray"/>

    <include layout="@layout/layout_progress" android:id="@+id/rlProgress"/>

</RelativeLayout>