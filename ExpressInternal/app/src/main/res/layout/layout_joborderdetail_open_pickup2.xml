<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvJobDescriptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="24dp"
            android:background="@color/orange_yellow"
            android:textStyle="bold"
            android:text="PICK UP"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tvEarnableAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tvJobDescriptionTitle"
            android:layout_marginRight="35dp"
            android:text="P 75"
            android:textSize="22sp"
            android:background="@drawable/bg_amount_to_earn"
            android:textColor="@color/apple_green" />

        <!--Start Waybill Container-->
        <LinearLayout
            android:id="@+id/llWaybillContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvJobDescriptionTitle"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <TextView
                style="@style/JobOrderDetailLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/job_order_waybill_number" />

            <TextView
                android:id="@+id/tvWaybillNo"
                style="@style/JobOrderDetailTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WBEPH00011000000000032" />

            <TextView
                style="@style/JobOrderDetailLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/joborderdetail_date_created" />

            <TextView
                android:id="@+id/tvDateCreated"
                style="@style/JobOrderDetailTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23 MAR - 02:30 PM" />


        </LinearLayout>

        <!--end Waybill Container-->

        <!--Start FROM-->
        <LinearLayout
            android:id="@+id/llFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/llWaybillContainer"
            android:background="@color/white_gray"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <TextView
                style="@style/JobOrderDetailLabelOrangeStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/alert_from" />

            <TextView
                style="@style/JobOrderDetailLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pickup_address" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPickupAddress"
                style="@style/JobOrderDetailTextStyle"
                android:text="Unit 8C 8th Flr, Marc 2000 Tower, Quirino Ave., cor. Taft Avenue, San Andres, Manila City, Metro Manila-Manila"
                android:paddingEnd="35dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/JobOrderDetailLabelStyle"
                        android:text="@string/shipper_name"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvShipperName"
                        style="@style/JobOrderDetailTextStyle"
                        android:text="Rocky Coronado"
                        android:paddingEnd="35dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:paddingEnd="35dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/JobOrderDetailLabelStyle"
                        android:text="@string/contact_number"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvShipperContactNo"
                        style="@style/JobOrderDetailTextStyle"
                        android:text="0917 812 7804"
                        android:paddingEnd="35dp" />

                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>
        <!--end FROM-->

        <!--start TO-->
        <LinearLayout
            android:id="@+id/llTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/llFrom"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <TextView
                style="@style/JobOrderDetailLabelOrangeStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/alert_to" />

            <TextView
                style="@style/JobOrderDetailLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delivery_address" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDeliveryAddress"
                style="@style/JobOrderDetailTextStyle"
                android:text="West Service Road, Cupang, Muntinlupa"
                android:paddingEnd="35dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/JobOrderDetailLabelStyle"
                        android:text="@string/consignee_name"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvConsigneeName"
                        style="@style/JobOrderDetailTextStyle"
                        android:text="Rocky Coronado"
                        android:paddingEnd="35dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:paddingEnd="35dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/JobOrderDetailLabelStyle"
                        android:text="@string/contact_number"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvConsigneeContactNo"
                        style="@style/JobOrderDetailTextStyle"
                        android:text="0917 812 7804"
                        android:paddingEnd="35dp" />

                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

        <!--end TO-->


    </RelativeLayout>

</merge>
