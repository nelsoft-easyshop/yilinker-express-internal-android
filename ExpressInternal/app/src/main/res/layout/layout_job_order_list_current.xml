<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ActivityDesign"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_weight="1.2"
            style="@style/JobOrderListTagStyle"
            android:text="@string/job_order_list_for_claiming"/>

        <TextView
            android:layout_weight="0.8"
            style="@style/JobOrderListTrackingNumStyle"
            android:text="JO1234567890"/>

    </LinearLayout>

    <TextView
        style="@style/JobOrderListAddressStyle"
        android:text="Malate Manila, Metro Manila"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="YE Malate Branch"
        android:textAppearance="@android:style/TextAppearance.Medium"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="1234 5678 9012"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="14:53:03 remaining"/>

</LinearLayout>