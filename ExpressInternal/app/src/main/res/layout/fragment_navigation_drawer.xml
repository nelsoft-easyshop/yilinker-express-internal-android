<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:background="@android:color/white">

    <ListView android:id="@+id/lvNavigationMenu"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="6" android:layout_marginTop="100dp" android:dividerHeight="0dp" android:divider="@android:color/transparent"/>

    <Button android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight="1" android:background="@drawable/bg_btn_orangeyellow" android:textColor="@color/white" android:text="@string/nd_logout"/>


</LinearLayout>