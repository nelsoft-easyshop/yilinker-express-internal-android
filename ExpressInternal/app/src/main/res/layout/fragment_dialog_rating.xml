<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:padding="20dp" android:orientation="vertical" android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:text="@string/signature_rate_delivery" android:gravity="center" android:layout_marginBottom="15dp"/>

        <RatingBar android:id="@+id/ratingJob" android:progressDrawable="@drawable/ratingbar" android:layout_width="wrap_content" android:layout_height="20dp" android:layout_gravity="center"  android:numStars="5"
            android:stepSize="1"
            android:rating="1" />

    </LinearLayout>

</RelativeLayout>