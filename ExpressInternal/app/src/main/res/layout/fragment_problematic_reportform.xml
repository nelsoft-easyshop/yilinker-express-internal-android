<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText android:background="@drawable/bg_problematic_remarks"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/etRemarks" android:hint="@string/problematic_remarks_hint" android:gravity="top" android:padding="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:gravity="center"
        android:textSize="20sp"
        android:layout_below="@+id/rlProgress"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:id="@+id/btnCamera" android:layout_below="@+id/etRemarks" android:src="@drawable/ic_camera" android:background="@android:color/transparent" android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />

    <TextView android:id="@+id/tvViewImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:gravity="center" android:layout_centerHorizontal="true" android:layout_below="@+id/btnCamera" android:textSize="16sp" android:text="@string/view_images" android:textColor="@drawable/selector_textcolor_orangered" android:clickable="true" />


    <Button android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="60dp" android:background="@drawable/bg_btn_orangeyellow" android:layout_alignParentBottom="true" android:textColor="@color/white" android:text="@string/confirm_problematic"/>

    <include layout="@layout/layout_progress" android:id="@+id/rlProgress" />

</RelativeLayout>