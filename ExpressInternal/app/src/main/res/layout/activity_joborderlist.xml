<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvTab" android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp"></android.support.v7.widget.RecyclerView
        >

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp" android:background="@color/orange_yellow"/>

    <ViewSwitcher android:id="@+id/viewSwitcher"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView android:id="@+id/rvJobOrder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" ></android.support.v7.widget.RecyclerView>

        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment" />


    </ViewSwitcher>

</LinearLayout>