<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ActivityDesign"
    tools:context=".Dashboard$PlaceholderFragment"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_weight="1"
        style="@style/LinearLayoutVertical"
        android:gravity="center_horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_weight="1"
            style="@style/LinearLayoutVertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/iv_circular"
                android:contentDescription="@string/app_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            style="@style/LinearLayoutHorizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_weight="1"
                style="@style/LinearLayoutVertical">

                <TextView
                    android:layout_weight="1"
                    style="@style/ProfileTextViewStyle"
                    android:text="1"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"/>

                <TextView
                    android:layout_weight="2"
                    style="@style/ProfileTextViewStyle"
                    android:text="@string/prof_delivery"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                style="@style/LinearLayoutVertical">

                <TextView
                    android:layout_weight="1"
                    style="@style/ProfileTextViewStyle"
                    android:text="1"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"/>

                <TextView
                    android:layout_weight="2"
                    style="@style/ProfileTextViewStyle"
                    android:text="@string/prof_pickup"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                style="@style/LinearLayoutVertical">

                <TextView
                    android:layout_weight="1"
                    style="@style/ProfileTextViewStyle"
                    android:text="1"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"/>

                <TextView
                    android:layout_weight="2"
                    style="@style/ProfileTextViewStyle"
                    android:text="@string/prof_completed"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                style="@style/LinearLayoutVertical">

                <TextView
                    android:layout_weight="1"
                    style="@style/ProfileTextViewStyle"
                    android:text="P10"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"/>

                <TextView
                    android:layout_weight="2"
                    style="@style/ProfileTextViewStyle"
                    android:text="@string/prof_earnings"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        style="@style/LinearLayoutVertical"
        android:padding="20dp"
        android:background="@color/orange_yellow">

        <TextView
            android:layout_weight="1"
            style="@style/ProfileTextViewStyle"
            android:text="@string/prof_job_orders"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"/>

        <TextView
            android:layout_weight="1"
            style="@style/ProfileTextViewStyle"
            android:text="@string/prof_pickups"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"/>

        <TextView
            android:layout_weight="1"
            style="@style/ProfileTextViewStyle"
            android:text="@string/prof_deliveries"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"/>

    </LinearLayout>

</LinearLayout>