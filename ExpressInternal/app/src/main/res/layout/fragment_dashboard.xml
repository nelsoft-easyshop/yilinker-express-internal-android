<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/JobOrderItemContainerStyle"
    tools:context=".Dashboard$PlaceholderFragment"
    android:baselineAligned="false">

    <include
        layout="@layout/layout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent">

            <ImageView android:id="@+id/ivLoginImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/iv_circular"
                android:contentDescription="@string/app_name" android:layout_centerHorizontal="true"/>

            <TextView android:id="@+id/tvUsername"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:textColor="@color/greyish_brown" android:textSize="25sp" android:layout_below="@+id/ivLoginImage"/>

        </RelativeLayout>


    <TableLayout android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:baselineAligned="false" android:padding="20dp">

        <TableRow android:layout_weight="1" >

            <TextView
            android:layout_weight="1"
            style="@style/ProfileTextStyle"
            android:text="1"/>

            <TextView
                android:layout_weight="1"
                style="@style/ProfileTextStyle"
                android:text="1"/>

            <TextView
                android:layout_weight="1"
                style="@style/ProfileTextStyle"
                android:text="1"/>

        </TableRow>

        <TableRow android:layout_weight="1" >

            <TextView
                android:layout_weight="1"
                style="@style/ProfileLabelStyle"
                android:text="@string/prof_delivery"/>

            <TextView
                android:layout_weight="1"
                style="@style/ProfileLabelStyle"
                android:text="@string/prof_pickup"/>

            <TextView
                android:layout_weight="1"
                style="@style/ProfileLabelStyle"
                android:text="@string/prof_earnings"/>

        </TableRow>

        <TableRow android:layout_weight="1" >

            <TextView
                android:layout_weight="1"
                style="@style/ProfileTextStyle"
                android:text="1"/>

            <TextView
                android:layout_weight="1"
                style="@style/ProfileTextStyle"
                android:text="1"/>

            <TextView
                android:layout_weight="1"
                style="@style/ProfileTextStyle"
                android:text="1"/>

        </TableRow>

        <TableRow android:layout_weight="1" >

            <TextView
                android:layout_weight="1"
                style="@style/ProfileLabelStyle"
                android:text="@string/prof_today"/>

            <TextView
                android:layout_weight="1"
                style="@style/ProfileLabelStyle"
                android:text="@string/prof_total"/>

            <TextView
                android:layout_weight="1"
                style="@style/ProfileLabelStyle"
                android:text="@string/prof_onhand"/>

        </TableRow>


    </TableLayout>

    <TableLayout
        android:layout_weight="1.5"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:paddingBottom="30dp"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:background="@color/orange_yellow" android:orientation="vertical">

        <TableRow android:clickable="true" android:id="@+id/btnJobOrders" android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent" android:background="@drawable/bg_label_profile_tvjoborder" android:layout_margin="5dp" android:gravity="center">

            <TextView android:background="@drawable/bg_count_profile_tvjoborder"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:text="1"
                android:gravity="center" android:layout_margin="10dp" android:padding="5dp" android:textSize="12sp" android:textColor="@color/white"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/prof_job_orders"
                android:textSize="22sp" android:textColor="@color/greyish_brown" android:gravity="center"/>


        </TableRow>

        <TableRow android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent" android:gravity="center" android:layout_margin="5dp">

            <TextView android:background="@drawable/bg_count_profile_tvjoborder_white"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:text="1"
                android:gravity="center" android:layout_margin="10dp" android:padding="5dp" android:textSize="12sp" android:textColor="@color/orange_yellow"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/prof_pickups"
                android:textSize="22sp"  android:gravity="center" android:textColor="@color/white"/>


        </TableRow>

        <TableRow android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent" android:gravity="center" android:layout_margin="5dp">

            <TextView android:background="@drawable/bg_count_profile_tvjoborder_white"
                android:layout_height="40dp"
                android:layout_width="40dp"
                android:text="1"
                android:gravity="center" android:layout_margin="10dp" android:padding="5dp" android:textSize="12sp" android:textColor="@color/orange_yellow"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/prof_deliveries"
                android:textSize="22sp"  android:gravity="center" android:textColor="@color/white"/>


        </TableRow>

    </TableLayout>

</LinearLayout>