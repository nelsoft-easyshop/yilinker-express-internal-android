<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_rounded_white"
    android:layout_margin="10dp"
    android:weightSum="5">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.70"
        android:layout_gravity="center"
        android:background="@drawable/complete_jo_image"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center"
        android:text="@string/complete_jo_good_job"
        android:textSize="22sp"
        android:textColor="@color/gray_brown"
        android:layout_gravity="center"
        />


    <TextView
        android:id="@+id/tvCongrats"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/complete_jo_congratulation"
        android:textSize="18sp"
        android:textColor="@color/warm_gray"
        android:gravity="center"
        android:layout_gravity="center"
        />


    <TextView
        android:id="@+id/tvEarned"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="P 50.00"
        android:textSize="36sp"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/btnWow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginTop="5dp"
        android:text="@string/complete_jo_wow"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/bg_btn_orangeyellow_rounded"
        android:textSize="20sp"/>

</LinearLayout>