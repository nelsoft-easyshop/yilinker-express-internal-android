<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_alignParentTop="true" android:padding="20dp">

        <TableRow>

            <TextView android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight="1.3" android:text="@string/cashmanagement_onhand" />
            <TextView android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight="1" android:text="20000 PHP" android:gravity="center_vertical|right" android:textColor="@color/orange_yellow"/>

        </TableRow>

        <TableRow android:layout_marginTop="20dp">

            <TextView android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight="1.3" android:text="@string/cashmanagement_limit" />
            <TextView android:layout_height="wrap_content" android:layout_width="0dp" android:layout_weight="1" android:text="100000 PHP" android:gravity="center_vertical|right" android:textColor="@color/orange_yellow"/>

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_below="@+id/llHeader" android:background="@color/white_gray" android:padding="20dp" android:orientation="vertical">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:textAllCaps="true" android:text="@string/cashmanagement_history" android:gravity="center" android:paddingBottom="10dp" />

        <android.support.v7.widget.RecyclerView android:id="@+id/rvHistory"
            android:layout_width="match_parent"
            android:layout_height="match_parent" ></android.support.v7.widget.RecyclerView>

    </LinearLayout>

</RelativeLayout>