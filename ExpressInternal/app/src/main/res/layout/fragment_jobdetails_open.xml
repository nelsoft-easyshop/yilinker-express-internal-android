<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/llButtons">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="@dimen/joborder_status_width"
            android:layout_height="@dimen/joborder_status_height"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="24dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@drawable/bg_image_marigold"
            android:textStyle="bold"
            android:text="PICK UP"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/tvEarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/tvStatus"
            android:layout_marginRight="10dp"
            android:text="P 75"
            android:textSize="@dimen/joborderdetails_earning_textsize"
            android:background="@drawable/bg_amount_to_earn"
            android:textColor="@color/apple_green" />

        <!--Start Waybill Container-->
        <LinearLayout
            android:id="@+id/llWaybillContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvStatus"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <TextView
                style="@style/JobOrderDetailLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/job_order_waybill_number" />

            <TextView
                android:id="@+id/tvWaybillNo"
                style="@style/JobOrderDetailTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WBEPH00011000000000032" />

            <TextView
                style="@style/JobOrderDetailLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/joborderdetail_date_created" />

            <TextView
                android:id="@+id/tvDateCreated"
                style="@style/JobOrderDetailTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23 MAR - 02:30 PM" />


        </LinearLayout>

        <!--end Waybill Container-->

        <!--Start FROM-->
        <LinearLayout
            android:id="@+id/llFrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/llWaybillContainer"
            android:background="@color/white_gray"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                style="@style/JobOrderDetailLabelOrangeStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/alert_from" />

            <TextView
                style="@style/JobOrderDetailLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pickup_address" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPickupAddress"
                style="@style/JobOrderDetailTextStyle"
                android:text="Unit 8C 8th Flr, Marc 2000 Tower, Quirino Ave., cor. Taft Avenue, San Andres, Manila City, Metro Manila-Manila" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/JobOrderDetailLabelStyle"
                        android:text="@string/shipper_name"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/JobOrderDetailLabelStyle"
                        android:text="@string/contact_number"/>



                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/tvShipperName"
                        style="@style/JobOrderDetailTextStyle"
                        android:text="Rocky Coronado" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/tvShipperContactNo"
                        style="@style/JobOrderDetailTextStyle"
                        android:text="0917 812 7804" />

                </TableRow>

            </TableLayout>


        </LinearLayout>
        <!--end FROM-->

        <!--start TO-->
        <LinearLayout
            android:id="@+id/llTo"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/llFrom"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:background="@color/white_gray"
            android:paddingRight="10dp">

            <TextView
                style="@style/JobOrderDetailLabelOrangeStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/alert_to" />

            <TextView
                style="@style/JobOrderDetailLabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delivery_address" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDeliveryAddress"
                style="@style/JobOrderDetailTextStyle"
                android:text="West Service Road, Cupang, Muntinlupa" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/JobOrderDetailLabelStyle"
                        android:text="@string/consignee_name"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/JobOrderDetailLabelStyle"
                        android:text="@string/contact_number"/>



                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/tvConsigneeName"
                        style="@style/JobOrderDetailTextStyle"
                        android:text="Rocky Coronado" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/tvConsigneeContactNo"
                        style="@style/JobOrderDetailTextStyle"
                        android:text="0917 812 7804" />

                </TableRow>

            </TableLayout>


        </LinearLayout>

        <!--end TO-->

</RelativeLayout>
</ScrollView>
    <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_button_height"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPositive"
            style="@style/JobOrderDetailFooterButtonStyle"
            android:background="@drawable/bg_btn_bluegreen"
            android:text="@string/joborderdetail_open_accept"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnNegative"
            style="@style/JobOrderDetailFooterButtonStyle"
            android:background="@drawable/bg_btn_warmgray"
            android:text="@string/joborderdetail_open_decline"
            android:textColor="@color/white"/>

    </LinearLayout>

    <include layout="@layout/layout_progress" android:id="@+id/rlProgress"/>

</RelativeLayout>