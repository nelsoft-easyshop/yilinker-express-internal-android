<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ActivityDesign"
    tools:context=".NavigationDrawerLeft">

    <ImageView
        android:layout_weight="1"
        android:id="@+id/ivNavDrawerImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@string/app_name"/>

    <ListView
        android:layout_weight="0.7"
        android:id="@+id/lvNavDrawerList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"/>

    <Button
        android:layout_weight="1.3"
        android:id="@+id/btnNavDrawerLogout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white_gray"
        android:text="@string/nd_logout"
        android:textColor="@color/warm_gray"
        android:textAllCaps="false"
        android:textAppearance="@android:style/TextAppearance.Medium"/>

</LinearLayout>