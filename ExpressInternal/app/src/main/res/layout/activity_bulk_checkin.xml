<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlCameraPreview"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        >

        <com.yilinker.expressinternal.customviews.CustomQRCodeReaderView
            android:id="@+id/qrcodeReader"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/ivFocusArea"
            android:layout_width="@dimen/qrscanner_focusarea_dimension"
            android:layout_height="@dimen/qrscanner_focusarea_dimension"
            android:layout_centerInParent="true"
            android:src="@drawable/camera_focus"
            android:layout_margin="10dp"/>

        <!-- Cover-->
        <View
            android:id="@+id/leftView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4D000000"
            android:layout_toLeftOf="@id/ivFocusArea"/>
        <View
            android:id="@+id/rightView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4D000000"
            android:layout_toRightOf="@id/ivFocusArea"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4D000000"
            android:layout_above="@id/ivFocusArea"
            android:layout_toLeftOf="@id/rightView"
            android:layout_toRightOf="@id/leftView"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4D000000"
            android:layout_below="@id/ivFocusArea"
            android:layout_toLeftOf="@id/rightView"
            android:layout_toRightOf="@id/leftView"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bulkcheckin_item_height"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/gray4"
        android:layout_below="@id/rlCameraPreview">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/bulkcheckin_waybillno"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/bulkcheckin_status"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:textSize="14sp"
            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llHeader"
        />

</RelativeLayout>