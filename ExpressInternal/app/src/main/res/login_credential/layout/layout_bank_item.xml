<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:id="@+id/llBankContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/ivBankLogo"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_ongoing_accreditation"/>

        <TextView
            android:id="@+id/tvBankName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="Banco De China"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"/>

        <ImageButton
            android:id="@+id/ibDropDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_dropdown_arrow"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white_gray"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Bank Name"
            android:textSize="14sp"
            android:textColor="@color/warmer_gray"/>

        <TextView
            android:id="@+id/tvBankName2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Banco de China"
            android:textSize="20sp"
            android:textColor="@color/gray_brown"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Account Name"
            android:textSize="14sp"
            android:textColor="@color/warmer_gray"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvAccountName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Yilinker Express"
            android:textSize="20sp"
            android:textColor="@color/gray_brown"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Account Number"
            android:textSize="14sp"
            android:textColor="@color/warmer_gray"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvAccountNumber"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="02 1012 100490 5"
            android:textSize="20sp"
            android:textColor="@color/gray_brown"/>

    </LinearLayout>


</LinearLayout>